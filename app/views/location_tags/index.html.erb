<div class="grid_12">
  <h2 id="page-heading">Location Tags</h2>
</div>


<div id="" class="grid_6">

<p style="color: green"><%= flash[:notice] %></p>


<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @location_tags.each do |location_tag| %>
  <tr>
    <td><%= location_tag.name %></td>
    <td><%= link_to 'Edit', edit_location_tag_path(location_tag, :farm_id => @farm.id) %></td>
    <td><%= link_to 'Destroy', location_tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Location Tag', new_location_tag_path(:farm_id => @farm.id) %>

</div>