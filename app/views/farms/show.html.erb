<div class="grid_12">
  <h2 id="page-heading"><%= "#{@farm.name} - Home" %></h2>
</div>
<p style="color: green"><%= flash[:notice] %></p>

<div class="grid_8">
  <h1>Deliveries:</h1>
  <ul class="menu">
    <li><%= link_to "Add New Delivery", new_delivery_path(:farm_id => @farm.id) %></li>
  </ul>
  <div class="box">
    <h2>Finalized (ready for delivery!):</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_finalized.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>

  <div class="box">
    <h2>In Progress (not accepting orders):</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_inprogress.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>

  <div class="box">
    <h2>Open (currently accepting orders):</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_open.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>

  <div class="box">
    <h2>Not Yet Open:</h2>
    <div class="block">
      <ul class="menu">
      <% @deliveries_notyetopen.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  </div>  

  <div class="box">
    <h2>Archived deliveries:</h2>
    <div class="block">
      <ul class="menu">      
      <% @deliveries_archived.each do |p|%>
          <li><%= render :partial => 'delivery_for_farm_list', :locals => {:p => p} %></li>
      <% end %>
      </ul>
      <div class="clear"></div>      
    </div>
  </div>



</div>

<div class="grid_4">
  <div id="manage_farm_links" class="box">
    <h2>Manage Farm</h2>
    <div class="block">
      <ul class="menu">
        <li><%= link_to "Schedule new Delivery", new_delivery_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "Products", products_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "Product Questions", product_questions_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "Members", members_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "Locations", locations_path(:farm_id => @farm.id)%></li>
        <li><%= link_to "Location Tags", location_tags_path(:farm_id => @farm.id) %></li>
        <li><%= link_to "Snippets", snippets_path(:farm_id => @farm.id)%></li>
        <li><%= link_to "Email Templates", email_templates_path(:farm_id => @farm.id) %></li>
      </ul>
    </div>
  </div>
  <div class="box">
    <h2>Subscriptions / Shares:</h2>
    <div class="block">
      <ul class="menu">
        <% @subscribable_products.each do |product| %>
          <li><%= link_to product.name, subscriptions_path(:product_id => product.id, :farm_id => @farm.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
